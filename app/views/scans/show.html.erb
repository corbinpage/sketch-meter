<div class="container">
<p id="notice"><%= notice %></p>
<p>
  <strong>Username:</strong>
  <%= @scan.username %>
</p>
<p>
  <strong>Score:</strong>
  <%= @scan.score %>
</p>
<% unless @scan.tweets.empty? %>
<p>
  <div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Text</th>
        <th>Score</th> 
        <th>Dirty Words</th>
        <th>Sentiment Score</th>
        <th>Sentiment Summary</th>
      </tr>
    </thead>
    <tbody>
      <% @scan.tweets.each do |t| %>
        <tr>
          <td><%= t.text %></td>
          <td><%= t.score %></td>
          <td><%= t.dirty_words %></td>
          <td><%= t.sentiment_score %></td>
          <td><%= t.sentiment_summary %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>
</p>
<% end %>
</div>
